package ui.levelorderer{	import flash.display.Bitmap;	import flash.display.Sprite;		import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;	import flash.utils.ByteArray;	import pyrokid.Embedded;	import ui.LevelsInfo;	/**	 * @author justinwindle	 */	public class ShuffleGridItem extends Sprite 	{		public var textField : TextField;				public var levelByteArray:ByteArray;		public function ShuffleGridItem(levelNum:int,width:Number,height:Number)		{			if (LevelsInfo.levelDict[levelNum] != undefined) {				levelByteArray = LevelsInfo.levelDict[levelNum];								var icon:Bitmap = Utils.getLevelIcon(levelNum);								var widthRatio:Number = width / icon.width;				var heightRatio:Number = height / icon.height;				var ratio:Number = Math.min(widthRatio, heightRatio);								icon.scaleX = icon.scaleY = ratio;				addChild(icon);			} else {				textField = new TextField();				textField.defaultTextFormat = new TextFormat("Arial", 11, 0xFFFFFF, false, false, false, null, null, TextFormatAlign.CENTER);				textField.autoSize = TextFieldAutoSize.LEFT;				textField.selectable = false;				textField.mouseEnabled = false;				textField.x = 2;				textField.y = 2;				addChild(textField);								graphics.lineStyle(0, 0xFFFFFF);				graphics.beginFill(0x111111);				graphics.drawRect(0, 0, 40, 40);				graphics.endFill();			}		}				override public function toString():String {			return Embedded.levelObjToString[levelByteArray];		}	}}